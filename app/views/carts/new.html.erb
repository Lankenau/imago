<!-- Validation failure messages -->

<% if @cart.errors.any? %>
  <% @cart.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Cart</h3>
      </div>
      <div class="panel-body">
        <form action="/create_cart" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @cart.user_id %>">
            </div>
          </div>

          <!-- Label and input for picture_id -->
          <div class="form-group">
            <label for="picture_id" class="col-sm-2 control-label">
              Picture
            </label>
            <div class="col-sm-10">
              <input type="text" id="picture_id" name="picture_id" placeholder="Picture" class="form-control" value="<%= @cart.picture_id %>">
            </div>
          </div>

          <!-- Label and input for size_id -->
          <div class="form-group">
            <label for="size_id" class="col-sm-2 control-label">
              Size
            </label>
            <div class="col-sm-10">
              <input type="text" id="size_id" name="size_id" placeholder="Size" class="form-control" value="<%= @cart.size_id %>">
            </div>
          </div>

          <!-- Label and input for material_id -->
          <div class="form-group">
            <label for="material_id" class="col-sm-2 control-label">
              Material
            </label>
            <div class="col-sm-10">
              <input type="text" id="material_id" name="material_id" placeholder="Material" class="form-control" value="<%= @cart.material_id %>">
            </div>
          </div>

          <!-- Label and input for quantity -->
          <div class="form-group">
            <label for="quantity" class="col-sm-2 control-label">
              Quantity
            </label>
            <div class="col-sm-10">
              <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @cart.quantity %>">
            </div>
          </div>

          <!-- Label and input for frame_id -->
          <div class="form-group">
            <label for="frame_id" class="col-sm-2 control-label">
              Frame
            </label>
            <div class="col-sm-10">
              <input type="text" id="frame_id" name="frame_id" placeholder="Frame" class="form-control" value="<%= @cart.frame_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Cart
              </button>
              or
              <a href="/carts">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
