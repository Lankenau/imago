<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cart #<%= @cart.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @cart.user_id %></dd>

              <dt>Picture</dt>
              <dd><%= @cart.picture_id %></dd>

              <dt>Size</dt>
              <dd><%= @cart.size_id %></dd>

              <dt>Material</dt>
              <dd><%= @cart.material_id %></dd>

              <dt>Quantity</dt>
              <dd><%= @cart.quantity %></dd>

              <dt>Frame</dt>
              <dd><%= @cart.frame_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/carts" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/carts/<%= @cart.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_cart/<%= @cart.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
