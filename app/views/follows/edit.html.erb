<!-- Validation failure messages -->

<% if @follow.errors.any? %>
  <% @follow.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Follow #<%= @follow.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_follow/<%= @follow.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for follower_id -->
          <div class="form-group">
            <label for="follower_id" class="col-sm-2 control-label">
              Follower
            </label>
            <div class="col-sm-10">
              <input type="text" id="follower_id" name="follower_id" placeholder="Follower" class="form-control" value="<%= @follow.follower_id %>">
            </div>
          </div>

          <!-- Label and input for followee_id -->
          <div class="form-group">
            <label for="followee_id" class="col-sm-2 control-label">
              Followee
            </label>
            <div class="col-sm-10">
              <input type="text" id="followee_id" name="followee_id" placeholder="Followee" class="form-control" value="<%= @follow.followee_id %>">
            </div>
          </div>

          <!-- Label and input for follow -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="follow">
                  <input type="checkbox" id="follow" name="follow" value="1" <%= "checked" if @follow.follow %>>
                  Follow
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Follow
              </button>
              or
              <a href="/follows/<%= @follow.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
