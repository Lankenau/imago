<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Frame #<%= @frame.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Material</dt>
              <dd><%= @frame.material %></dd>

              <dt>Color</dt>
              <dd><%= @frame.color %></dd>

              <dt>Picture</dt>
              <dd><%= @frame.picture_id %></dd>

              <dt>Cover</dt>
              <dd><%= @frame.cover %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/frames" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/frames/<%= @frame.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_frame/<%= @frame.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
